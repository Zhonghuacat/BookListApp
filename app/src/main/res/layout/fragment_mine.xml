<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMine">

    <LinearLayout
        android:id="@+id/linearLayout_like"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout_time"
        app:layout_constraintStart_toEndOf="@+id/linearLayout_time"
        app:layout_constraintTop_toTopOf="@+id/linearLayout_time"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView_like"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/like" />

        <TextView
            android:id="@+id/textView_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我喜欢的" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_time"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="160dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_time"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/time" />

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史记录" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="122dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/mine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名称"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="这个用户好懒呀，连简介都没有！"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/textView_userName" />

</androidx.constraintlayout.widget.ConstraintLayout>